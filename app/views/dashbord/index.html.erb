<h1 class="text-center">Welcome to Angadia phone book</h1>
<h4 class="text-center">India's largest angadia telephone directory</h4>
<%= form_tag(root_path, method: :get) do |f|%>
  <div class="form-inputs">
	<%= text_field_tag :city, "", required: true %>
	<%= submit_tag("Search")%>
	</div>
<%end%>

<% if @contacts.present? %>
	<h3>Search result for <strong><%= params[:city]%></strong></h3>
	<table class="table">
  <thead>
    <tr>
      <th>Company</th>
      <th>Area</th>
      <th>City</th>
      <th>Number</th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.company.name %></td>
        <td><%= contact.area %></td>
        <td><%= contact.city %></td>
        <td><%= contact.number %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h4><%= paginate @contacts %></h4>
<%end%>

