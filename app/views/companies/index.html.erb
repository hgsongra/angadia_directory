<h1>Angadia
  <%= link_to new_company_path, class: "btn btn-primary pull-right" do%> 
    <span class="glyphicon glyphicon-plus"></span> New Angadia
  <%end%>
</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td>
           <%= link_to edit_company_path(company), class: "btn btn-primary" do %>
            <span class="glyphicon glyphicon-pencil"></span> Edit 
          <%end%>
          
          <%= link_to company, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
            <span class="glyphicon glyphicon-trash"></span> Remove 
          <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h4><%= paginate @companies %></h4>
